<%= form_with model: user do |form| %>
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class:"form-control" %>
    <% user.errors.full_messages_for(:name).each do |message|%>
    <div>
        <%=message%>
    </div>
    <%end%>
  </div>

  <div class="form-group">
    <%= form.label :city %><br>
    <%= form.text_field :city, class:"form-control" %>
    <% user.errors.full_messages_for(:city).each do |message|%>
    <div>
        <%=message%>
    </div>
    <%end%>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary",data: {confirm: "Are you sure?"} %>
  </div>
<% end %>